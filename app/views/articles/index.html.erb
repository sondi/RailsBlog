<div class="transparent_box_text"> 
<h1>Things that inspire...</h1>
<%=link_to 'New Artcle', new_article_path%>
<h3>Listing articles</h3>
  <% @articles.each do |article| %>
<!--  <div id="post"> -->
  <div class="col-md-4">
    <div class="thumbnail">
      <%= image_tag(article.image_url)%>
    <div class="caption">
      <h1><%= article.title %></h1>
      <p><%= article.text %></p>
    </div>
    <div id="btns">
        <ul>
        <li><%= link_to 'Show', article_path(article) %></li>
        <li><%= link_to 'Edit', edit_article_path(article) %></li>
        <li><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </div>
  </div>
<!--   </div> --> 
  <% end %>
</div>
