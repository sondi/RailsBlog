<div class="transparent_box_show_article">
  <div class="col-md-12">
    <div class="thumbnail">
		<%= image_tag(@article.image_url)%>
			<div class="caption">
				<div id="show_article">
					<h1><%= @article.title %></h1>

					<h3><%= @author%></h3>
					<p><%= @article.text %></p>
					<h2>Comments</h2>
				</div>
				<% @article.comments.each do |comment| %>
				<div class="comment">
					<p>
						<%= comment.commenter %>
					</p>
					<p>
						<%= comment.body %>
					</p>
				</div>
					<% end %>
				<div id="commenter">
					<h2>Add a comment:</h2>
					<%= form_for([@article, @article.comments.build]) do |f| %>
					<p>
						<%= f.label :commenter %><br>
						<%= f.text_field :commenter %>
					</p>
					<p>
						<%= f.label :body %><br>
						<%= f.text_area :body %>
					</p>
					<p>
						<%= f.submit %>
					</p>
					<% end %>
					<div id="links">
						<%= link_to 'Edit', edit_article_path(@article) %> 
						<%= link_to 'Back', articles_path %>
					</div>
				</div>
		  	</div>
		</div>
	</div>
</div>





